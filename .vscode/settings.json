{
    "C_Cpp.default.includePath": [
        "${env:GDK}/inc",
        "${env:GDK}/res",
        "${workspaceFolder}/res",
        "${workspaceFolder}/inc"
    ],
    "C_Cpp.default.defines": [
        "__GENESIS__",
        "__SGDK__"
    ],
    "C_Cpp.default.compilerPath": "${env:GDK}/bin/gcc.exe",
    "C_Cpp.default.cStandard": "c11",
    "C_Cpp.default.intelliSenseMode": "gcc-x64",
    "files.associations": {
        "genesis.h": "c",
        "minunit.h": "c",
        "functions.h": "c",
        "constants.h": "c",
        "types.h": "c",
        "game_state.h": "c",
        "typing.h": "c",
        "drawing.h": "c",
        "options.h": "c",
        "*.res": "plaintext"
    },
    "terminal.integrated.env.windows": {
        "PATH": "${env:GDK}/bin;${env:PATH}"
    },
    "[c]": {
        "editor.defaultFormatter": "ms-vscode.cpptools",
        "editor.formatOnSave": true
    }
}